model User {
  id            String    @id @default(cuid())
  email         String    @unique
  normalizedEmail String    @unique
  password      String
  address       String?
  firstName     String?
  lastName      String?
  phone         String?
  profileImg    String?
  refreshToken  String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  // role          UserRole  

  // drivers Driver[]
